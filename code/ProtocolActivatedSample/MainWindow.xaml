<Window x:Class="ProtocolActivatedSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProtocolActivatedSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="This application is activated via a custom protocol by:" 
                   HorizontalAlignment="Center"
                   FontSize="24" FontWeight="Bold" Foreground="DarkBlue"/>
        <TextBlock HorizontalAlignment="Center"
                   FontSize="18" Foreground="Gray"
                   Name="LaunchingPackageNameTextBlock"
                   Text="(cannot determine launching package name)"/>
        <TextBlock HorizontalAlignment="Center"
                   FontSize="14" Foreground="DarkGray" 
                   Name="ProtocolUri"
                   Text="(not launched by URI)"/>
    </StackPanel>
</Window>
